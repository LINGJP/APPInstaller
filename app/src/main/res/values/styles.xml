<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="no_title" parent="android:Theme.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="install_dialog" parent="no_title">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="myProgressStyle">
        <item name="android:indeterminateDrawable">@drawable/animate_progress_image</item>
    </style>
    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue</item>
    </style>
    <style name="listStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
